<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00ffdd"
    android:layout_height="match_parent"
    tools:context=".GuestMode">

    <TextView

        android:id="@+id/textView"
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:layout_marginTop="20sp"
        android:textColor="#112211"
        android:text="@string/choose_game_mode"
        android:textSize="40sp"
        />




<RelativeLayout
    android:layout_below="@id/textView"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_marginTop="20dp">


    <Button
        android:id="@+id/colours"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_colors"
        android:text="Colours"
        android:textSize="30sp" />

    <Button
        android:id="@+id/mathematics"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_below="@+id/colours"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/btnmath"
        android:text="Mathematics"
        android:textSize="30sp" />

</RelativeLayout>


</RelativeLayout>
